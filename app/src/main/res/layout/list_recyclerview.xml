<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">


        <androidx.cardview.widget.CardView
            android:id="@+id/gorsel_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/resimImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Şarkı kapağı"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>
        <!-- Şarkı Görseli -->


        <!-- Şarkı Başlığı -->
        <TextView
            android:id="@+id/SarkiismiTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Şarkı Adı"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="Şarkı başlığı"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/gorsel_cardView"
            app:layout_constraintEnd_toStartOf="@id/favoriteIcon"
            android:layout_marginStart="16dp" />

        <!-- Sanatçı ve Süre -->
        <TextView
            android:id="@+id/artistDurationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sanatçı • 3:30"
            android:textSize="14sp"
            android:contentDescription="Sanatçı ve süre"
            app:layout_constraintTop_toBottomOf="@id/SarkiismiTextView"
            app:layout_constraintStart_toEndOf="@id/gorsel_cardView"
            app:layout_constraintEnd_toStartOf="@id/favoriteIcon"
            android:layout_marginStart="16dp" />

        <!-- Favori İkonu -->
        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:contentDescription="Favoriye ekle"
            android:src="@drawable/favori_asset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SarkiismiTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>